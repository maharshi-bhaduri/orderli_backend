datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model provider_details {
  providerId     Int        @id @default(autoincrement())
  providerName   String
  providerType   String
  providerHandle String     @unique
  address        String?
  city           String?
  state          String?
  country        String?
  postalCode     String?
  owner          String?
  website        String?
  social1        String?
  social2        String?
  social3        String?
  about          String?
  contactNo      String?
  qrData         String?
  rating         Float?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  menus          menu[]
  feedbacks      feedback[]
}

model menu {
  menuId       Int              @id @default(autoincrement())
  provider     provider_details @relation(fields: [providerId], references: [providerId])
  providerId   Int
  itemName     String?
  description  String?
  price        Float?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  category     String?
  image        String?
  dietCategory Int?
  subcategory1 String?
  subcategory2 String?
  subcategory3 String?
  serves       Int?
  activeFlag   Int?
}

model feedback {
  feedbackId        Int              @id @default(autoincrement())
  provider          provider_details @relation(fields: [providerId], references: [providerId])
  providerId        Int
  consumerName      String
  consumerEmail     String?
  consumerPhone     String?
  consumerVisitDate DateTime
  rating            Float
  feedbackComments  String
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt
}
